<%- include("../partials/header")%>

<div class="container">
	<div class="row">
		<h1 style="text-align: center">Add a New Comment to <%= quiz.name %></h1>
		<div style="width: 30%; margin: 25px auto;">
		<form action="/quizes/<%= quiz._id %>/comments" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="comment[text]" placeholder="text" autofocus>
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-default btn-block">Write!</button>
			</div>
		</form>
			<a href="/quizes">Go Back</a>

		</div>

	</div>
</div>

<%- include("../partials/footer")%>